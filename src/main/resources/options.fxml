<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:controller="models.OptionsController" xmlns:fx="http://javafx.com/fxml">
    <children>
        <VBox maxWidth="Infinity">
            <children>
                <HBox>
                    <children>
                        <Label text="URL to testrail instance" minWidth="200.0"/>
                        <TextField fx:id="urlTextField" minWidth="300.0" text="https://testrail.ee.playtech.corp/testrail/" promptText="URL like http://...com/testrail/"/>
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <Label text="Login" minWidth="200.0"/>
                        <TextField fx:id="loginTextField" minWidth="300.0"/>
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <Label text="Password" minWidth="200.0"/>
                        <PasswordField fx:id="passwordTextField" minWidth="300.0" />
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <Region prefWidth="200.0" />
                <Button fx:id="saveOptionsButton" prefWidth="200.0" text="_Save and apply"/>
                <Button fx:id="closeOptionsButton" prefWidth="200.0"  text="_Close and discard" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>


</AnchorPane>